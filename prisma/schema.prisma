datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model user {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  name     String
  role     Role  @default(ADMIN)
  createdAt DateTime @default(now())
}
enum Role {
  GUEST
  ADMIN
  OPERATOR
}